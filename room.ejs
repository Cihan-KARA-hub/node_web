import React from "react";


const room = ({ username, room,setUsername,setRoom ,setchatScreen,socket }) => {


    const sendRoom = () => {
        socket.emit('room',room)
        setchatScreen(true)
    }
    return(
       <div className='flex items-center justify-center h-full  '>

         <div className='w-1/3 h-[300px] bg-white flex flex-col justify-center space-y-6 p-3  rounded-xl'>

            <h1 className="font-bold text-xl text-center ">HOŞGELDİNİZ</h1>

            <input value={username} onChange={e => setUsername(e.target.value)} className="h-10 border-2 rounded-xl p-3 " type="text" placeholder="username" />
            
            <input  value={room} onChange={e => setRoom(e.target.value)} className="h-10 border-2 rounded-xl p-3 " type="text" placeholder="id" />
            <div onClick={sendRoom} className="  border h-12 p-2 rounded-xl text-xl text-center bg-indigo-600 cursor-pointer hover:opacity-90"> 
                BAŞLA
            </div>
        </div>
       </div>
    );
};


export default room;
